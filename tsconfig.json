{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "NodeNext",
    "lib": ["es6", "DOM"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true
  }
}
